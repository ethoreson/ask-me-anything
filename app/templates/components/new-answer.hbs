{{#if addNewAnswer}}
<h3>Add Answer</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="explanation">Explanation</label>
        {{input value=explanation id="explanation"}}
      </div>
      <button {{action 'saveAnswer'}}>Post</button>
    </form>
  </div>
{{else}}
    <button {{action 'answerFormShow'}}>Post Answer</button>
{{/if}}
